      align-items: center;
      gap: 10px;
      font-size: 0.95em;
    }

    .side-captured .captured-card img {
      width: 40px;
      border-radius: 8px;
      background: #fff;
    }

    .main-content {
      flex: 1;
      padding: 30px 0 30px 0;
      display: flex;
      flex-direction: column;
      align-items: center;
    }

